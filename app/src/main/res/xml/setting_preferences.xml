<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="앱 설정">

        <SwitchPreferenceCompat
            app:title="폴더 자동분류"
            app:key="auto_calssification"
            app:summaryOff="문서 분류 폴더를 선택할 수 있습니다"
            app:summaryOn="문서가 자동으로 분류됩니다" />
        <ListPreference
            app:defaultValue="Grid view"
            app:entries="@array/view_entries"
            app:entryValues="@array/view_values"
            app:key="view_type"
            app:title="보기 방식"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="계정">

        <Preference
            app:title="로그아웃"
            app:key="log_out"/>
        <Preference
            app:title="회원 탈퇴"
            app:key="Delete_account"/>
    </PreferenceCategory>

</PreferenceScreen>