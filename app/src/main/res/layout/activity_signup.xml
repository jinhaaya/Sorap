<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="10dp"
        android:text="ID"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/editText_id"/>

    <TextView
        android:id="@+id/textView_passwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Password"
        app:layout_constraintTop_toBottomOf="@id/editText_id"
        app:layout_constraintStart_toStartOf="@id/editText_passwd" />

    <TextView
        android:id="@+id/textView_passwdConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Password Confirm"
        app:layout_constraintTop_toBottomOf="@id/editText_passwd"
        app:layout_constraintStart_toStartOf="@id/editText_passwdConfirm" />

    <EditText
        android:id="@+id/editText_id"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_id"/>


    <EditText
        android:id="@+id/editText_passwd"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="textPassword"
        android:maxWidth="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_passwd"/>

    <EditText
        android:id="@+id/editText_passwdConfirm"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="textPassword"
        android:maxWidth="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_passwdConfirm"/>

    <Button
        android:id="@+id/signup_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Sign Up"
        android:textColor="@color/blue_500"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toEndOf="@id/cancel"
        app:layout_constraintTop_toBottomOf="@id/textView_passwdConfirm" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="cancel"
        android:textColor="@color/blue_500"
        app:layout_constraintBottom_toBottomOf="@id/signup_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/signup_button"/>


</androidx.constraintlayout.widget.ConstraintLayout>